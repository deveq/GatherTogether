<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="3dp"
    app:cardCornerRadius="3dp"

    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    <ImageView
        android:id="@+id/search_item_image"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_android_black_24dp"/>

    <TextView
        android:id="@+id/search_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="왕십리 스터디"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/search_item_image"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/search_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="안드로이드 스터디 하실분"
        app:layout_constraintTop_toBottomOf="@id/search_title"
        app:layout_constraintLeft_toLeftOf="@id/search_title"
        android:layout_marginTop="4dp"/>

    <ImageView
        android:id="@+id/search_location_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_location_searching_24"
        app:layout_constraintTop_toBottomOf="@id/search_text"
        app:layout_constraintLeft_toLeftOf="@id/search_text"
        android:layout_marginTop="4dp"/>


    <TextView
        android:id="@+id/search_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="서울시 중구"
        android:textSize="8dp"
        app:layout_constraintLeft_toRightOf="@id/search_location_image"
        app:layout_constraintTop_toTopOf="@id/search_location_image"
        android:layout_marginLeft="4dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#acacac"
        app:layout_constraintTop_toBottomOf="@id/search_location_image"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="8dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>